---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import GithubSection from "@/components/sections/GithubSection.astro";
import AboutSection from "@/components/sections/AboutSection.astro";
import SkillsSection from "@/components/sections/SkillsSection.astro";
import ContactSection from "@/components/sections/ContactSection.astro";
import Footer from "@/components/Footer.astro";
import { AppleHelloEnglishEffect } from "@/components/AppleHelloEffect";

const skillCategories = [
	{
		title: "Frontend",
		skills: ["TypeScript", "React", "Vue", "Astro", "Angular"],
	},
	{
		title: "Backend",
		skills: ["Golang", "PostgreSQL", "Redis", "GCS", "Caddy"],
	},
	{
		title: "DevOps",
		skills: ["Docker", "Kubernetes"],
	},
	{
		title: "Systems",
		skills: ["Linux", "NixOS", "Ubuntu", "Fedora"],
	},
];

const about = {
	description:
		"Software engineer specializing in developing scalable web applications and system architectures.",
	location: "Vietnam",
};

const contact = {
	email: "contact@hoachnt.com",
	articlesCount: 11,
};

const currentYear = new Date().getFullYear();
---

<Layout title="Nguyen Tien Hoach â€“ Fullstack Developer">
	<main
		class="min-h-screen bg-[#f5f5f1] dark:bg-[#111111] text-[#111111] dark:text-[#f5f5f1] font-sans antialiased"
	>
		<div
			class="container mx-auto px-4 py-8 sm:py-12 max-w-md sm:max-w-xl md:max-w-2xl lg:max-w-4xl xl:max-w-5xl"
		>
			<Header name="Nguyen Tien Hoach" title="Developer" />

			<div class="mb-12 pt-4">
				<AppleHelloEnglishEffect client:load />
			</div>

			<GithubSection />

			<AboutSection
				description={about.description}
				location={about.location}
			/>

			<SkillsSection skillCategories={skillCategories} />

			<ContactSection
				articlesCount={contact.articlesCount}
				email={contact.email}
			/>

			<Footer year={currentYear} author="Hoachnt" />
		</div>
	</main>
</Layout>
